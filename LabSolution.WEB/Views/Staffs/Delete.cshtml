@model LabSolution.WEB.Models.StaffModel
@using System.Text.RegularExpressions

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Xác nhận xóa thông tin</h3>
<div>
    <h4>Ấn nút Delete để xóa thông tin từ DB</h4>
    <hr />
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PK_StaffID):
            </th>
            <td>
                @Html.DisplayFor(model => model.PK_StaffID)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name):
            </th>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email):
            </th>
            <td>
                @Html.DisplayFor(model => model.Email, new { @placeholder = "E-mail" })
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tel):
            </th>
            <td>
                @Html.DisplayFor(model => model.Tel)
            </td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />   @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
